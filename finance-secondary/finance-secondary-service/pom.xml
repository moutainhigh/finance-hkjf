		<dependency>
			<groupId>com.hongkun.finance</groupId>
			<artifactId>finance-info-service</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hongkun.finance</groupId>
			<artifactId>finance-fund-service</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
